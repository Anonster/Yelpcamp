<%- include('../Partials/header') %>
<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="text-center mt-4">Create a new campground</h1>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form class="myCustom" action="/campground" method="POST">
                <div class="form-group col-lg-5 col-md-8 m-auto">
                    <label for="name">Camp Name</label>
                    <input class="form-control form-control-lg" type="text" placeholder="Name" name="name">
                </div>
                <div class="form-group col-lg-5 col-md-8 pt-3 m-auto">
                    <label for="imageurl">Camp Image Url</label>
                    <input class="form-control form-control-lg" type="text" name="imageurl" placeholder="Image URl">
                </div>
                <div class="form-group col-lg-5 col-md-8 pt-3 m-auto">
                    <label for="price">Price</label>
                    <input class="form-control form-control-lg" type="number" min="0.01" step="0.01" name="price"
                        placeholder="Price">
                </div>
                <div class="form-group col-lg-5 col-md-8 pt-3 m-auto">
                    <label for="description">Description</label>
                    <input class="form-control form-control-lg" type="text" name="description"
                        placeholder="Description">
                </div>
                <div class="form-group col-md-5 pt-3 m-auto">
                    <button class="btn btn-block btn-primary" type="submit">Submit</button>
                </div>

                <div class="form-group col-md-5 pt-3 m-auto">
                    <a href="/campground">Go Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('../Partials/footer') %>